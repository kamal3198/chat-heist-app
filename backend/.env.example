NODE_ENV=development
PORT=3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=500
LOG_LEVEL=info

# Preferred in production (Render): put the full JSON string here.
FIREBASE_SERVICE_ACCOUNT_JSON=

# Alternative: base64-encoded service account JSON.
FIREBASE_SERVICE_ACCOUNT_BASE64=

# Alternative: relative or absolute file path (local/dev).
FIREBASE_SERVICE_ACCOUNT_PATH=config/serviceAccountKey.json

FIREBASE_STORAGE_BUCKET=
FIREBASE_WEB_API_KEY=

SERVER_REQUEST_TIMEOUT_MS=60000
SERVER_HEADERS_TIMEOUT_MS=65000
SERVER_KEEP_ALIVE_TIMEOUT_MS=60000

# Legacy compatibility (optional)
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
FIREBASE_PRIVATE_KEY=
